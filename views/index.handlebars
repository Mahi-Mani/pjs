<nav class="navbar navbar-light bg-light s">
    <a class="navbar-brand" href="#">
        <img src="logo-dark128x.png" width="48" height="48" alt="">
    </a>
    <form class="form-inline mr-auto">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    </form>
    <span id="welcome" class="navbar-brand"></span>
    <a id="user" class="navbar-brand" href="#"></a>
</nav>
<div class="d-flex flex-wrap">
    {{#each jobspost}}
    <div id="jobpost" class="card bg-dark text-white ml-3 mt-3">
        <img src="Screen Shot 2019-10-13 at 10.17.37 PM.png" class="card-img img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">
                {{company}}</p>
            <p class="card-text">{{city}}, {{state}}</p>
        </div>
    </div>
    {{/each}}
</div>
</div>
<div id="landing" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content p-3 text-center">
                <h5>Welcome to Pinjobs</h5>
                <h7>Easy to use tech search engine..</h7>
            <div class="modal-body">
                <form>
                    <fieldset id="login-form">
                        <input id="email" class="form-control form-control-lg" type="text" placeholder="Email">
                    </fieldset>
                        <button id="login" type="submit" class="btn btn-danger btn-lg btn-block w-100 mt-3" data-state="login">Log-In</button>
                </form>
            </div>
        </div>
    </div>
</div>
